{
  "name": "React + TS DevContainer",
  "dockerComposeFile": [
    "../docker-compose.dev.yml"
  ],
  "service": "react-app-dev",          // debe coincidir con el nombre del servicio en docker-compose
  "workspaceFolder": "/app",
  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "remoteUser": "node"
}
