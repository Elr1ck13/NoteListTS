{
  "name": "React 17 + TS 4 DevContainer",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "react-app",              // debe coincidir con el nombre del servicio en docker-compose
  "workspaceFolder": "/app",
  "forwardPorts": [3000],
  "postCreateCommand": "npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "remoteUser": "node"
}
